type: agent.plugin
label: <%= @label %>
disabled: <%= @disabled %>
period: <%= @period %>
timeout: <%= @timeout %>
details:
  file: <%= @plugin_filename %>
  timeout: <%= @plugin_timeout %>
  <% if @plugin_args %>
  args: <%= @plugin_args %>
  <% end %>

